<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Para bank Frontend Testing" preserve-order="true">
    <test name="Registration Test">
        <classes>
            <class name="Registration.ValidRegistration"/>
            <class name="Registration.InvalidRegistration"/>
        </classes>
    </test>
    <test name="Login Test">
        <classes>
            <class name="Login.ValidLogin"/>
            <class name="Login.InvalidLogin"/>
            <class name="Login.ForgotPassword"/>
        </classes>
    </test>
    <test name="Open New Account">
        <classes>
            <class name="OpenNewAccount.OpenAccount"/>
        </classes>
    </test>
    <test name="Request Loan">
        <classes>
            <class name="RequestLoan.ValidRequestLoan"/>
        </classes>
    </test>
</suite>